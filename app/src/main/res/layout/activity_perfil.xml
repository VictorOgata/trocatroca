<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourLightPurple"
    tools:context=".Activity.PerfilActivity">

    <View
        android:id="@+id/view"
        android:layout_width="380sp"
        android:layout_height="772sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurações de Perfil"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="7dp" />

    <ScrollView
        android:layout_width="385sp"
        android:layout_height="504sp"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Name"
                style="@style/edittext_style"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Nome"
                app:layout_constraintBottom_toTopOf="@+id/Email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/Email"
                style="@style/edittext_style"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="22dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Email"
                app:layout_constraintBottom_toTopOf="@+id/Password"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Name" />

            <EditText
                android:id="@+id/Password"
                style="@style/edittext_style"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginBottom="19dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Senha"
                app:layout_constraintBottom_toTopOf="@+id/spinnerstate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Email" />

            <Spinner
                android:id="@+id/spinnercity"
                style="@style/edittext_style"
                android:layout_width="270dp"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="10dp"
                android:hint="Estado"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerstate" />

            <Spinner
                android:id="@+id/spinnerstate"
                style="@style/edittext_style"
                android:layout_width="270dp"
                android:layout_height="35sp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="7dp"
                android:hint="Estado"
                app:layout_constraintBottom_toTopOf="@+id/spinnercity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Password" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="39sp"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="29dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="33dp"
                android:gravity="center"
                android:text="Nome: "
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toStartOf="@+id/Name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="E-mail:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/Email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="33dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Senha:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintEnd_toStartOf="@+id/Password"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="26dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="Cidade:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/spinnercity"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="23sp"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="22dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Estado:"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintEnd_toStartOf="@+id/spinnerstate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <Button
                android:id="@+id/button5"
                style="@style/button_style"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="6dp"
                android:onClick="onModifyProfileButtonClicked"
                android:text="Editar"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button2" />

            <Button
                android:id="@+id/button2"
                style="@style/button_style"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:onClick="onModifyPasswordButtonClicked"
                android:text="Modificar Senha"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/button5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnercity" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>