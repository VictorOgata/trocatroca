<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/btnMeusAnuncios"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_height="49sp"
        android:text="Procurar Match" />

    <Button
        android:id="@+id/btnNovoAnuncio"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:layout_below="@id/btnMeusAnuncios"
        android:text="Nova Oferta" />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_mAnuncios"
            android:layout_width="match_parent"
            android:layout_below="@id/btnNovoAnuncio"
            android:layout_height="match_parent" />

</RelativeLayout>