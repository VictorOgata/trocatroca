<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Activity.NovoAnuncioActivity">


    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="8sp"
        android:gravity="center"
        android:text="Criar nova oferta"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintBottom_toTopOf="@+id/edtItemCadastro"
        app:layout_constraintEnd_toEndOf="@+id/edtItemCadastro"
        app:layout_constraintStart_toStartOf="@+id/edtItemCadastro"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edtItemCadastro"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="124dp"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:errorEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtItemCadastroEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item"
            android:inputType="text"
             />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edtDesejadosCadastro"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="192dp"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:errorEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtDesejadosCadastroEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Desejados (separados por ',') "
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/edtDescricaoCadastro"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="264dp"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:errorEnabled="true"
        app:layout_constraintBottom_toTopOf="@+id/Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edtDescricaoCadastroEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descricao "
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>
    -

    <Spinner
        android:id="@+id/edtCondicoes"
        style="@style/spinner_style"
        android:layout_marginEnd="50sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="8sp"
        android:hint="Condições especiais para troca"
        app:layout_constraintBottom_toTopOf="@+id/btnNewAd"
        app:layout_constraintEnd_toEndOf="@+id/btnNewAd"
        app:layout_constraintStart_toStartOf="@+id/btnNewAd"
        app:layout_constraintTop_toBottomOf="@+id/edtDescricaoCadastro" />

    <Button
        android:id="@+id/btnNewAd"
        style="@style/button_style"
        android:layout_marginBottom="80sp"
        android:layout_marginEnd="50sp"
        android:layout_marginStart="50sp"
        android:layout_marginTop="20sp"
        android:text="Ofertar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCondicoes" />

</android.support.constraint.ConstraintLayout>